# Server Configuration
PORT=10000
NODE_ENV=production

# Database (MongoDB Atlas)
MONGO_URI=mongodb+srv://<user>:<password>@cluster.mongodb.net/orbitdev

# Graph Database (Neo4j AuraDB Free Tier)
# Required for knowledge graph features
NEO4J_URI=neo4j+s://<db-id>.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASS=<your-password>

# Security
JWT_SECRET=<generate-random-secret>
SESSION_SECRET=<generate-random-secret>

# Frontend URL (For CORS)
# Function: Allows your Vercel frontend to access this backend
FRONTEND_URL=https://<your-project>.vercel.app

# GitHub OAuth (For Login)
# Get these from GitHub Developer Settings -> OAuth Apps
GITHUB_CLIENT_ID=<your-client-id>
GITHUB_CLIENT_SECRET=<your-client-secret>
GITHUB_CALLBACK_URL=https://<your-backend>.onrender.com/auth/github/callback

# AI Service (Python)
# URL of your deployed Python service on Render
AI_SERVICE_URL=https://<your-ai-service>.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
